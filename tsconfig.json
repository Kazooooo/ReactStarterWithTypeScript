{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "target": "es2015",
    "lib": ["es2016", "dom"],
    "rootDir": "./",
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    // "noImplicitAny": true,
    // "strictNullChecks": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "types": [
    "typePatches"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true
  }
}
